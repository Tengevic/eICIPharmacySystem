@model coderush.Models.RFPSaleorder
@{
    ViewData["Title"] = "Sales Order Detail";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="row">
            <div class="col-lg-6">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title"><i class="fa fa-building"></i> @ViewData["Title"]</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                                    title="Collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="content-container-fluid">
                            <div class="row">
                                <dl class="dl-horizontal">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.RFPSaleorderId)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.RFPSaleorderId)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.RFPSaleorderName)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.RFPSaleorderName)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.RFPCustomerId)
                                    </dt>
                                    <dd>
                                        <input type="text" id="CustomerId" />
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.SaleDate)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.SaleDate)
                                    </dd>
                                    <dt>
                                        Invoice
                                    </dt>
                                    @if (Model.RFPinvoice != null)
                                    {
                                        <dd>
                                            @Html.DisplayFor(model => model.RFPinvoice.RFPinvoiceName)

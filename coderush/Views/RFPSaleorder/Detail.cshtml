                                    <td>
                                        <input id="Quantity" type="number" onchange="NewAmount(this.value)" />
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Amount
                                    </td>
                                    <td>
                                        <label id="CostAmount" name="CostAmount"></label>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Discount Percentage
                                    </td>
                                    <td>
                                        <input id="Disc" type="number" value=0 />
                                    </td>
                                    <td>

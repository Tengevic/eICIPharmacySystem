@model coderush.Models.RFPRequest
@{
    ViewData["Title"] = "AtM Request";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title"><i class="fa fa-building"></i> @ViewData["Title"]</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <div class="content-container-fluid">
                    <div class="row">
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.RFPRquestName)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.RFPRquestName)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.RFPCustomer.RFPCustomerName)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.RFPCustomer.RFPCustomerName)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.InstitutionName)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.InstitutionName)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.RequestDate)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.RequestDate)
                            </dd>
                        </dl>
                    </div>

                </div>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
        <div class="box">
            <div class="box-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div id="Grid"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8">
                    </div>
                    <div class="col-lg-4">

                    </div>
                </div>
            </div>
        </div>

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


@section Styles{
}
@section Scripts{
    <script type="text/javascript">
        $(function () {
                var dataManager = ej.DataManager({
                    url: "/api/RFPRequestLine",
                    adaptor: new ej.WebApiAdaptor(),
                    headers: [{ "RFPRequestId": @Model.RFPRequestId}],
                offline: true,
            });

            dataManager.ready.done(function (e) {
            $("#Grid").ejGrid({
                dataSource: ej.DataManager({
                    json: e.result,
                    adaptor: new ej.remoteSaveAdaptor(),

                }),
                toolbarSettings: {
                    showToolbar: true,
                    toolbarItems: ["search"]
                },

                allowPaging: true,
                allowResizeToFit:true,
                allowResizing: true,
                columns: [
                    { field: "Prescription", headerText: 'Prescription' },
                ],

            });
            });


        });


    </script>
}
